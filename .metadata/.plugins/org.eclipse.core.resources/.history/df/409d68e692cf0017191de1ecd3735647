package edu.demon.MultiThread16;

import java.util.concurrent.CountDownLatch;

public class WaitNotifyDemo implements Runnable{
	private int num;
	private static int count = 0;
	private Object mutex;
	public static void main(String[] args) {
		Object obj = new Object();
		WaitNotifyDemo run1 = new WaitNotifyDemo(obj,1);
		WaitNotifyDemo run2 = new WaitNotifyDemo(obj,2);
		new Thread(run1).start();
		new Thread(run2).start();

	}

	public  WaitNotifyDemo(Object obj, int num) {
		this.mutex = obj;
		this.num = num;
	}
	@Override
	public void run() {
		synchronized (mutex) {
			while (true) {
				try {
					mutex.notifyAll();
					mutex.wait();
					System.out.println(num);
					count++;
					if (num < count) {
						break;
					}
				} catch (InterruptedException e) {
					e.printStackTrace();
				}

			}
		}
	}

}
